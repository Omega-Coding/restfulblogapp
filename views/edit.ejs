<% include ./partials/header %>
<div class="ui main text segment container">
    <div class="ui huge header">Edit Post</div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image Link</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Content</label>
            <!--<input type="text" name="blog[body]" placeholder="Blog Content..." rows="5">-->
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <button class="ui purple basic big button">Submit</button>
    </form>
</div>

<% include ./partials/footer %>